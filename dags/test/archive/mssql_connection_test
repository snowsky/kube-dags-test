import logging
from airflow import DAG
from airflow.operators.python_operator import PythonOperator
from airflow.hooks.base_hook import BaseHook
from datetime import datetime

def check_sql_server_connection():
    connection = BaseHook.get_connection('prd-az1-cpsql2-airflowconnection')
    try:
        conn = connection.get_hook().get_conn()
        conn.cursor().execute("SELECT 1")
        logging.info("Connection successful!")
    except Exception as e:
        logging.error(f"Connection failed: {e}")

def run_sql_server_query():
    connection = BaseHook.get_connection('prd-az1-cpsql2-airflowconnection')
    try:
        conn = connection.get_hook().get_conn()
        cursor = conn.cursor()
        cursor.execute("SELECT * FROM [HL7_Products].[dbo].[RapidAlertProcessingTime]")
        results = cursor.fetchall()
        for row in results:
            logging.info(row)
    except Exception as e:
        logging.error(f"Query failed: {e}")

default_args = {
    'owner': 'airflow',
    'start_date': datetime(2024, 9, 9),
    'retries': 1,
}

with DAG('check_mssql_server_connection_dag',
         default_args=default_args,
         schedule_interval='@daily',
         catchup=False) as dag:

    check_connection_task = PythonOperator(
        task_id='check_sql_server_connection',
        python_callable=check_sql_server_connection
    )

    run_query_task = PythonOperator(
        task_id='run_sql_server_query',
        python_callable=run_sql_server_query
    )

    check_connection_task >> run_query_task
